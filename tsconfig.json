{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "jsx": "react",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "@types",
    "src/**/*",
    "server/**/*"
  ],
  "exclude": [
    "dist",
    "public/web",
    "node_modules"
  ]
}
