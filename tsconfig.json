{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "jsx": "react",
    "noUnusedLocals": true
  },
  "include": [
    "@types",
    "src/**/*",
    "server/**/*"
  ],
  "exclude": [
    "dist",
    "public/web",
    "node_modules"
  ]
}
