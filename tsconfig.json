{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "noImplicitAny": true,
    "jsx": "react"
  },
  "include": [
    "typings.d.ts", 
    "server/index.ts"
  ],
  "exclude": [
    "dist",
    "public/web",
    "node_modules"
  ]
}
