{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "jsx": "react"
  },
  "include": [
    "src/@types/*.d.ts",
    "server/index.ts"
  ],
  "exclude": [
    "dist",
    "public/web",
    "node_modules"
  ]
}
